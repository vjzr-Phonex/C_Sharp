<Window x:Class="LocalAuthWinBoeRelSys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="现场授权" Height="350" Width="525" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2" MaxHeight="2"/>
            <RowDefinition Height="100" MaxHeight="100"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="180"/>
            <RowDefinition Height="25" />
            <RowDefinition Height="2"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="2"/>
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="6" Header="验证方式" Name="test">
            <StackPanel>
                <RadioButton Width="50" Grid.Column="1" ></RadioButton>
                <RadioButton Width="50" Grid.Column="1" ></RadioButton>
            </StackPanel>
         </GroupBox>
        
        <GroupBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="6" Header="主管输入授权信息">
        </GroupBox>
    </Grid>
</Window>
